---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A minimalist static site template' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased flex flex-col">
    <slot />
    <script is:inline define:vars={{ base }}>
      // Redirect invitation/recovery tokens from root to admin page
      // This handles email links that go to /#invite_token=... instead of /admin/#invite_token=...
      // Also handles /WebTemplate/admin paths (GitHub Pages base path)
      if (typeof window !== 'undefined') {
        const hash = window.location.hash;
        const hasInviteToken = hash.includes('invite_token=');
        const hasRecoveryToken = hash.includes('recovery_token=');
        const currentPath = window.location.pathname;
        
        if (hasInviteToken || hasRecoveryToken) {
          // If we're on /WebTemplate/admin, redirect to /admin (Netlify path)
          if (currentPath.includes('/WebTemplate/admin')) {
            window.location.replace('/admin' + hash);
          } else if (!currentPath.includes('/admin')) {
            // If we're on root or other path, redirect to /admin
            const adminUrl = '/admin' + hash;
            window.location.replace(adminUrl);
          }
        }
      }
    </script>
  </body>
</html>
